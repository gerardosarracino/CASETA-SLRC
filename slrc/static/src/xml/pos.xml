    <record id="openacademy_settings_view2" model="ir.ui.view">
        <field name="name">Openacademy Configuration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside" >
                <div class="app_settings_block" data-string="Open Academy Data-String" string="Parametros" data-key="openacademy">
                <h2>Datos de Reporte</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" title="Este es el folio para cada venta">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label string="Cajero" for="cajero"/>
                                    <div class="text-muted">
                                        Cajero
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="default_cajero" colspan="4" nolabel="1" force_save="1"/>
                                    </div>
                                </div>
                                <div>
                                    <label string="Jefe de Operaciones" for="jefe_operaciones"/>
                                    <div class="text-muted">
                                        Jefe de Operaciones
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="default_jefe_operaciones" colspan="4" nolabel="1" force_save="1" />
                                    </div>
                                </div>
                                <div>
                                    <label string="Administrador" for="administrador"/>
                                    <div class="text-muted">
                                        Administrador
                                    </div>
                                    <div class="content-group mt16">
                                        <field name="default_administrador" colspan="4" nolabel="1" force_save="1" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


    <t t-extend="report_saledetails">
        <t t-jquery=".page" t-operation="replace">
            <div class="page">
                <div class="text-center">
                    <h2>Detalles de Cuotas</h2>

                    <strong><t t-esc="date_start" t-options="{'widget': 'datetime'}"/> - <t t-esc="date_stop" t-options="{'widget': 'datetime'}"/></strong>
                </div>
            </div>
        </t>
    </t>

    <template id="report_saledetails" inherit_id="point_of_sale.report_saledetails" primary="True">
       <xpath expr="//t[@t-esc='name']"  position="replace">
            <h2>Detalles de Cuotas</h2>

       </xpath>
    </template>



</templates>
