<odoo>
  <data>



     <record id="view_slrc_pos_details_wizard" model="ir.ui.view">
      <field name="name">slrc_pos.details.wizard.form</field>
      <field name="model">pos.details.wizard</field>
      <field name="inherit_id" ref="point_of_sale.view_pos_details_wizard" />
      <field name="arch" type="xml">
          <xpath expr="//form" position="replace">
            <form string="Detalles de Cuotas">
                <group string="Datos del Informe">
                    <field name="carril_pos"/>
                    <field name="cajero"/>
                    <field name="jefe_operaciones"/>
                    <field name="administrador"/>
                </group>
                <group>
                    <field name="total_efectivo"/>
                </group>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>

                <group>
                    <field name="dolares"/>
                    <field name="dolar_tipo_cambio" force_save="1"/>
                    <field name="dolares_pesos" force_save="1"/>
                </group>

                <group>
                    <field name="tabla_tarifas" widget='one2many' mode="tree" nolabel="1" > <!-- context="{'default_id_boleto_emergente': active_id,}" -->
                        <tree delete="1" editable="bottom">
                            <field name="tarifa" />
                            <field name="costo_cuota" string="Costo"/>
                            <field name="efectivos" string="Efectivos" sum="Efectivos"/>
                            <field name="cancelados" sum="Cancelados"/>
                            <field name="evadidos" sum="Evadidos"/>
                            <field name="errores" sum="Errores"/>
                            <field name="recaudado" sum="Recaudado"/>
                        </tree>
                    </field>
                </group>

                <group string="Boletos Emergentes">
                    <field name="boleto_emergente" widget="boolean"  />
                </group>

                <group>
                    <field name="tabla_cuotas" widget='one2many' mode="tree" nolabel="1" attrs="{'invisible':[('boleto_emergente','=',False)]}"> <!-- context="{'default_id_boleto_emergente': active_id,}" -->
                        <tree delete="1" editable="bottom">
                            <field name="id_boleto_emergente" readonly="1" invisible="1" force_save="1" />
                            <field name="cuota" required="1" force_save="1" />
                            <field name="folio_del" required="1" force_save="1" />
                            <field name="folio_al" required="1" force_save="1" />
                            <field name="cantidad" required="1" sum="Efectivos" force_save="1" />
                            <field name="costo_cuota" readonly="1" required="1" force_save="1" />
                            <field name="total" readonly="1" required="1" force_save="1" sum="Total"/>
                        </tree>
                    </field>
                </group>

                <!--group string="Carril">
                    <field name="pos_config_srlc_ids" mode="tree" colspan="4" nolabel="1" string="Cuotas">
                      <tree>
                        <field name="name" string="Carriles"/>
                      </tree>
                    </field>
                </group-->

                <footer>
                    <button name="generate_report" string="Print" type="object" class="btn-primary"

                    /> <!-- Detalle de ventas  confirm="AL GENERAR ESTE REPORTE CON BOLETOS EMERGENTES, SE" -->
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
          </xpath>
      </field>
    </record>




  </data>
</odoo>